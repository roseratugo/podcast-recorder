{
  "productName": "Okarin",
  "version": "0.1.0",
  "identifier": "com.okarin.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Okarin",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "theme": "Dark",
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; media-src 'self' mediastream: blob:; connect-src 'self' ws: wss: http: https:; font-src 'self' data:",
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capabilities for the app",
          "windows": ["*"],
          "permissions": [
            "core:default",
            "core:window:allow-start-dragging",
            "dialog:default",
            "store:default",
            "updater:default",
            "process:allow-restart",
            "process:allow-exit"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "copyright": "Â© 2025 Ugo ROSERAT",
    "shortDescription": "Multi-track podcast recording app",
    "longDescription": "Recording a podcast remotely usually means one compressed audio stream for everyone. Okarin captures each participant as a separate track, giving you individual files for professional post-production.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwNjg2NUVDOEU0NTYzMjkKUldRcFkwV083R1ZvZ0RqaDVPSjc0Ri9LOXpqU0ZRODhrb3hmMTlVb0x2eWc5d0xPaUhneGNPTFkK",
      "endpoints": ["https://github.com/roseratugo/okarin/releases/latest/download/latest.json"]
    }
  }
}
